{
    "manifest_version": 2,
    "name": "Facebook Gist Viewer",
    "version": "0.1.2",
    "description": "Sexy github gist viewer on Facebook.",
    "homepage_url": "https://github.com/shlee322/facebook-gist-viewer",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "js": ["facebook-gist.user.js"],
            "matches": ["https://www.facebook.com/*"]
        }
    ],
    "permissions": [
        "https://gist.github.com/*"
    ]
}
